<h2>商品一覧</h2>
<h4>全<%= @items.count %>件</h4>
<% @items.each do |item| %>
<% if item.image.attached? %>
        <%= image_tag item.image, size: "100x100" %>
      <% else %>
        <%= image_tag 'no-image', size: "100x100" %>
      <% end %>

  <%= link_to item.name, item_path(item) %><br>
      <p>￥<%= item.price.to_s(:delimited) %></p>
<% end %>
