<main class="ml-5">
  <h4 class="top_titel">新規登録</h4>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
     
     <div class="container-fluid align-items-baseline">
        <div class="row">
          <div class="col-3"><%= f.label :名前 %></div>
          <div class="col-0.2"><%= f.label :（姓）　%></div>
          <div class="col-3"><%= f.text_field :last_name %></div>
          <div class="col-0.2"><%= f.label :（名）　%></div>
          <div class="col-3"><%= f.text_field :first_name %></div>
          
        </div>
        
        <div class="row">
          <div class="col-3"><%= f.label :フリガナ%></div>
          <div class="col-0.2"><%= f.label :（セイ） %></div>
          <div class="col-3"><%= f.text_field :last_name_kana %></div>
          <div class="col-0.2"><%= f.label :（メイ） %></div>
          <div class="col-3"><%= f.text_field :first_name_kana %></div>
        </div>
        
        <div class="row">
          <div class="col-3"><%= f.label :メールアドレス %></div>
          <div class="col-0.2">　　　　</div>
          <div class="col-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
          
        </div>
        
        <div class="row">
          <div class="col-3"><%= f.label :郵便番号（ハイフンなし） %></div>
          <div class="col-0.2">　　　　</div>
          <div class="col-3"><%= f.text_field :postcode %></div>
        </div>
        
        <div class="row">
          <div class="col-3"><%= f.label :住所 %></div>
          <div class="col-0.2">　　　　</div>
          <div class="col-3"><%= f.text_field :address, {class: 'address_text'} %></div>
        </div>
        
        <div class="row">
          <div class="col-3"><%= f.label :電話番号（ハイフンなし） %></div>
          <div class="col-0.2">　　　　</div>
          <div class="col-3"><%= f.text_field :phone_number %></div>
        </div>
      
      
        <div class="row">
          <div class="col-3"><%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
          </div>
          <div class="col-0.2">　　　　</div>
          <div class="col-3">
          <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </div>
      
        <div class="row">
          <div class="col-3"><%= f.label :パスワード（確認用） %></div>
          <div class="col-0.2">　　　　</div>
          <div class="col-3"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
          
        </div>
     </div>
      <div class="row">
        <div class="col-3"></div>
          <div class="col-0.2">　　　　</div>
          <div class="col-3"><%= f.submit "新規登録", {class: 'new_button'} %></div>
      </div>
  <% end %>
  <h4>既に登録済みの方</h4>
  <p><%= render "public/shared/links" %></p>
</main>