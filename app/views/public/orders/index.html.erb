<div class="orders_index">
  
  <h2>注文履歴一覧</h2>
  <div>
    <table>
      <thead>
        <th>
          注文日
        </th>
        <th>
          配送先
        </th>
        <th>
          注文商品
        </th>
        <th>
          支払金額
        </th>
        <th>
          ステータス
        </th>
        <th>
          注文詳細
        </th>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <%= order.created_at %>
          </td>
          <td>
            <%= order.address %>
          </td>
          <td>
            <% order.order_histories.each do |hist| %>
            <%= hist.item.name %>
            <% end %>
          </td>
          <td>
            <%= order.total_price %>
          </td>
          <td>
            <%= order.status %>
          </td>
          <td>
            <%= link_to "表示する", order_path(order.id) %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>