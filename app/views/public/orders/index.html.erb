<div class="orders_index">


  <h2>注文履歴一覧</h2>
  
  <h2 class="m__ttl_head">注文履歴一覧</h2>
  <div>
    <table>
      <thead>
        <th class="border_my">注文日</th>
        <th class="border_my">配送先</th>
        <th class="border_my">注文商品</th>
        <th class="border_my">支払金額</th>
        <th class="border_my">ステータス</th>
        <th class="border_my">注文詳細</th>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td class="border_my"><%= order.created_at.strftime("%Y/%m/%d") %></td>
          <td class="border_my"><%= order.address %></td>
          <td class="border_my">
            <% order.order_histories.each do |hist| %>
            <%= hist.item.name %>
            <% end %>
          </td>
          <td class="border_my"><%= order.total_price %></td>
          <td class="border_my"><%= order.status %></td>
          <td class="border_my"><%= link_to "表示する", order_path(order.id), class: 'btn btn-primary' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
