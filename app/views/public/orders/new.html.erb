<h2>注文情報入力</h2>
<h4>支払方法</h4>
<%= form_with model: @order, url: new_order_path do |f| %>

<%= f.radio_button :pay_method, Order.pay_methods.key(0) %>
<%= f.label :pay_method, "クレジットカード" %>

<%= f.radio_button :pay_method, Order.pay_methods.key(1) %>
<%= f.label :pay_method, "銀行振込" %>
<% end %>

<h4>お届け先</h4>
<%= form_with model: @order, url: confirm_path  do |f| %>

<%= f.radio_button :address, "address" %>
<%= f.label :address, "ご自身の住所" %>
<%= @address_costomer.postcode %><%= @address_costomer.address %><%= @address_costomer.last_name %><%= @address_costomer.first_name %>

<%= f.radio_button :address, "index" %>
<%= f.label :address, "登録済住所から選択" %>
<%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>

<%= f.radio_button :address, "create" %>
<%= f.label :address, "新しいお届け先" %>
郵便番号（ハイフンなし）
<%= f.text_field :postcode %>
住所
<%= f.text_area :address %>
宛名
<%= f.text_field :name %>
<%= f.submit '確認画面へ進む' %>
<% end %>