<h2>ショッピングカート</h2>
<% if @item.user == current_user %>
 <%= link_to "カートを空にする" , cart_item_path(@cart_item), method: :delete.all %>
<% end %>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= f.hidden_field :title, :value => "1" %>
            <%= f.select :amount, *[1..10] %> %>
            </td>
        <td><%= item.price*item.amount %></td>
        <td><% if @item.customer == current_user %>
              <%= link_to "削除する" , cart_item_path(@cart_item), method: :delete %>
            <% end %>
        </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to "買い物を続ける" , item_path(@item) %>
<table>
  <tr>
    <th>合計金額</th>
    <th><%= @item.amount %></th>
  </tr>
</table>