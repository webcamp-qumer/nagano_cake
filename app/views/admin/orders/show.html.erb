<div class="title">
<h3>注文履歴詳細</h3>
</div>

<div class='container'>
  <div class='row'>
    <div class='col-10'>
      <p><string>購入者</string><%= @order.customer.last_name %><%= @order.customer.first_name %></p>
      <p><string>注文日</string><%= @order.created_at %></p>
      <p><string>配送先</string>
        <%= @order.postcode%><%= @order.address %>
        <%= @order.name %>
      </p>
      <p><string>支払い方法</string>
        <%= @order.pay_method %></p>
      <p><string>注文ステータス</string>
         <%= form_with model: @order, url: admin_order_path do |f| %>
         <%= f.select :status, options_for_select(Order.statuses) %>

         <!--select=プルダウンメニューの表示-->
         <%= f.submit '更新', class: 'btn btn-success font-weight-bold' %>
         <% end %>
      </p>
    </div>
  </div>
</div>

<div class='row'>
  <div class='col-8 mx-auto'>
  <table class='table table-hover table-inverse'>
  <thead class='topic'>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @order_histories.each do |order_history| %>
    <tr>
    <td><%= order_history.item.name %></td>
    <td><%= order_history.price_non_tax*1.10.floor %></td>
    <td><%= order_history.quantity %></td>
    <td><%= order_history.price_non_tax*1.10.floor*order_history.quantity %></td>
        <% @total = @total + order_history.price_non_tax*1.10.floor*order_history.quantity %> <!--左の@totalは変数-->

    <td>
        <%= form_with model: order_history, url: admin_order_history_path(order_history), local: true do |f| %>
        <%= f.select :status, OrderHistory.statuses.keys %>
        <%= f.submit '更新', class: 'btn btn-success font-weight-bold'%>
       <% end %>
    </td>
    </tr>
    <% end %>
  </tbody>
  </table>
  </div>
  </div>
<div>

<div class='row'>
  <div class='col-6 mx-auto'>
  <table class='table table-hover table-inverse'>
    <thead class='topic'>
    <tr>
      <th>商品合計</th>
      <th>送料</th>
      <th>請求合計金額</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @total.to_s(:delimited) %>円</td>
      <td><%= @order.postage.to_s(:delimited) %>円</td>
      <td><%= @total + @order.postage %>円</td>
    </tr>
  </tbody>
  </table>
</div>
</div>
</div>