<h1>商品一覧</h1>
<tadle>
　<thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  
  <tobody>
    <% @items.each do |item| %>
    <tr>
        <td><%= item.id %></td>
        <td><%= link_to admin_item_path(item) do %>
            <%= item.name %>
            <% end %>
            </td>
        <td><%= item.price_non_tax %></td>

    </tr>
    <% end %>
  </tobody>
</tadle>
<p><%= link_to '商品新規登録',  new_admin_item_path %></p>