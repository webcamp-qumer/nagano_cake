<div class="title">
  <div class="container">
    
        <div class='items'>  
          <h3>商品一覧</h3>
        </div>
        
           <%= link_to new_admin_item_path,class: 'nav-link' do %>
           <h4>商品新規登録<i class="fas fa-plus-circle"></i></h4>   
           <% end %>
           
  </div>
</div>

<div class="container">
  <div class="row">
    <div class='mx-auto col-11'>
    
<table class='table table-hover table-inverse'>
　<thead class='topic'>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  
    <% @items.each do |item| %>
    <tr>
        <td><%= item.id %></td>
        <td><%= link_to admin_item_path(item),class: "link" do %>
            <%= item.name %>
            <% end %>
            </td>
        <td><%= item.price_non_tax.to_s(:delimited) %></td>
        <td><%= item.genre.name %></td>
        <td >
         <% if item.is_active == true %>
         <span style="font-weight: bold; color:#28a44a;">
          販売中
         </span>
         <% else %>
         <span style="font-weight: bold; color:#dddddd;">
          販売停止中
         </span>
         <% end %>  
        </td>

    </tr>
    <% end %>
</tadle>
    </div>
  </div>
</div>
