<h2>商品一覧</h2>
<table class='table table-hover table-inverse'>
　<thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  
  <tobody>
    <% @items.each do |item| %>
    <tr>
        <td><%= item.id %></td>
        <td><%= link_to admin_item_path(item),class: "link" do %>
            <%= item.name %>
            <% end %>
            </td>
        <td><%= item.price_non_tax.to_s(:delimited) %></td>
        <td><%= item.genre.name %></td>
        <td >
         <% if item.is_active == true %>
         <span style="font-weight: bold; color:#28a44a;">
          販売中
         </span>
         <% else %>
         <span style="font-weight: bold; color:#dddddd;">
          販売停止中
         </span>
         <% end %>  
        </td>

    </tr>
    <% end %>
  </tobody>
</tadle>
<p><%= link_to '商品新規登録',  new_admin_item_path %></p>