<div class="title">
  <div class="container">
    <div class="row">
      <div class="col-2">
          <h3>商品編集</h3>
      </div>
    </div>
  </div>
</div>

<div class="container">
 <div class='row'>
  <div class='col-6 mx-auto'>

    <%= form_with model:@item, url: admin_item_path(@item), method: :patch do |f| %> 
    
   <table>
    <tr>
     <th>
        <span>商品画像</span>
     </th>
     <td><%= f.file_field :image, accept: "image/*" %></td>
    </tr>

    <tr>
     <th>
      <span>商品名</span>
     </th>
     <td><%= f.text_field :name, size: "30x10" %></td>
    </tr>

     <tr>
     <th>
      <span>商品説明</span>
     </th>
     <td><%= f.text_area :message, size: "30x10" %></td>
    </tr>

     <tr>
     <th>
      <span>ジャンル</span>
     </th>
      <td><%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "-- 選択してください --") %></td>
     </tr>
     
    <tr>
     <th>
      <span>税抜価格</span>
     </th>
     <td><%= f.text_field :price_non_tax, size: "30x10" %></td>
    </tr>

    <tr>
     <th>
      <span>販売ステータス</span>
     </th>
     <td>
         <%= f.radio_button :is_active, :true %>販売中
         <%= f.radio_button :is_active, :false %>販売停止中
     </td>
    </tr>
   </table>  
   <p><%= f.submit '変更を保存', class: 'btn btn-success font-weight-bold' %></p>
   <% end %>
  </div>
 </div>
</div>
