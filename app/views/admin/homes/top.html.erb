<div class="title">
  <div class="container">
          <h3>注文履歴一覧</h3>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class='mx-auto col-11'>
      <table class='table table-hover table-inverse'>
        <thead class='topic'>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tobody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= link_to admin_order_path(order),class: "time-link" do %>
                <%= order.created_at %>
                <% end %>
            </td>
            <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
            <td><%= order.order_histories.inject(0) {|sum, hash| sum + hash[:quantity]} %></td>
            <td><%= order.status %></td>
          </tr>
          <% end %>
         </tobody>
      </table>
    </div>
  </div>
</div>
