<div class="title">
  <div class="container">
    <div class="row">
      <div class="mx-auto">
        <h3 class='link'><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
      </div>
    </div>
  </div>
</div>

<div class='container'>
  <div class='row'>
    <div class='mx-auto'>
      <table>
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postcode %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
           <% if @customer.is_deleted == false %>
           有効
           <% else %>
           退会
           <% end %>
          </td>
        </tr>
        <tr>
          <td><%= link_to '編集する', edit_admin_customer_path(@customer), class: 'btn btn-success font-weight-bold' %></td>
          <td><%= link_to '注文履歴一覧を見る', admin_root_path, class: 'btn btn-primary font-weight-bold' %></td>
        </tr>
      </table>
      
    </div>
  </div>
</div>

