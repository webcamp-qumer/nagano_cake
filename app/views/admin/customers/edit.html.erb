<h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h1>

<%= form_with model:@customer, url: admin_customer_path(@customer),method: :patch  do |f| %>
<div>
  <p>会員ID：<%= @customer.id %></p>
  <p>氏名：<%= f.text_field :last_name %><%= f.text_field :first_name %></p>
  <p>フリガナ：<%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></p>
  <p>郵便番号：<%= f.text_field :postcode %></p>
  <p>住所：<%= f.text_field :address %></p>
  <p>電話番号：<%= f.text_field :phone_number %></p>
  <p>メールアドレス：<%= f.text_field :email %></p>
  <p>会員ステータス
  <label><%= f.radio_button :is_active, :true %>退会</label>
  <label><%= f.radio_button :is_active, :false %>有効</label>
  </p>
</div>
<% end %>

<%= link_to '変更を保存',  admin_customer_path(@customer) %>

